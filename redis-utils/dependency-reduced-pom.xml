<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>connector-redis-parent</artifactId>
    <groupId>org.ballerinalang</groupId>
    <version>0.99.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>redis</artifactId>
  <name>Ballerina - Redis Component</name>
  <url>http://ballerinalang.org</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>${project.groupId}:${project.artifactId}</include>
                  <include>io.lettuce:lettuce-core</include>
                  <include>io.projectreactor:reactor-core</include>
                  <include>org.reactivestreams:reactive-streams</include>
                  <include>org.apache.commons:commons-pool2</include>
                  <include>com.github.kstyrc:embedded-redis</include>
                  <include>com.google.guava:guava</include>
                  <include>commons-io:commons-io</include>
                  <include>io.netty:netty-all</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>jacoco-initialize</id>
            <goals>
              <goal>prepare-agent</goal>
            </goals>
          </execution>
          <execution>
            <id>check</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>check</goal>
            </goals>
            <configuration>
              <dataFile>${basedir}/target/coverage-reports/jacoco-unit.exec</dataFile>
              <haltOnFailure>true</haltOnFailure>
              <rules>
                <rule>
                  <element>BUNDLE</element>
                  <excludes>
                    <exclude>*Test</exclude>
                    <exclude>**/generated/**</exclude>
                  </excludes>
                </rule>
              </rules>
            </configuration>
          </execution>
          <execution>
            <id>jacoco-site</id>
            <phase>test</phase>
            <goals>
              <goal>report</goal>
            </goals>
            <configuration>
              <dataFile>${basedir}/target/coverage-reports/jacoco-unit.exec</dataFile>
              <outputDirectory>${basedir}/target/coverage-reports/site</outputDirectory>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <destFile>${basedir}/target/coverage-reports/jacoco-unit.exec</destFile>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.ballerinalang</groupId>
      <artifactId>ballerina-lang</artifactId>
      <version>2.0.0-Preview5</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.ballerinalang</groupId>
      <artifactId>ballerina-core</artifactId>
      <version>2.0.0-Preview5</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.ballerinalang</groupId>
      <artifactId>ballerina-runtime-api</artifactId>
      <version>2.0.0-Preview5</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.ballerinalang</groupId>
      <artifactId>ballerina-runtime-api</artifactId>
      <version>2.0.0-Preview5</version>
      <type>zip</type>
      <classifier>ballerina-binary-repo</classifier>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <version>6.9.10</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>jcommander</artifactId>
          <groupId>com.beust</groupId>
        </exclusion>
        <exclusion>
          <artifactId>bsh</artifactId>
          <groupId>org.beanshell</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.ballerinalang</groupId>
      <artifactId>ballerina-runtime</artifactId>
      <version>2.0.0-Preview5</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.ballerinalang</groupId>
      <artifactId>ballerina-test-utils</artifactId>
      <version>2.0.0-Preview5</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>ballerina-tool</artifactId>
          <groupId>org.ballerinalang</groupId>
        </exclusion>
        <exclusion>
          <artifactId>ballerina-packerina</artifactId>
          <groupId>org.ballerinalang</groupId>
        </exclusion>
        <exclusion>
          <artifactId>javassist</artifactId>
          <groupId>org.javassist</groupId>
        </exclusion>
        <exclusion>
          <artifactId>org.wso2.transport.http.netty</artifactId>
          <groupId>org.wso2.transport.http</groupId>
        </exclusion>
        <exclusion>
          <artifactId>axiom-dom</artifactId>
          <groupId>org.apache.ws.commons.axiom</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <reporting>
    <plugins>
      <plugin>
        <groupId>com.github.spotbugs</groupId>
        <artifactId>spotbugs-maven-plugin</artifactId>
        <version>4.1.5-SNAPSHOT</version>
        <configuration>
          <excludeFilterFile>spotbugs-exclude.xml</excludeFilterFile>
          <includeFilterFile>spotbugs-include.xml</includeFilterFile>
        </configuration>
      </plugin>
    </plugins>
  </reporting>
</project>
